AM_CPPFLAGS = -Wall -DPREFIX=\"$(prefix)\" -I$(top_srcdir)/lib @QT4_CFLAGS@ -DQT3_SUPPORT -I/usr/include/Qt3Support
LIBS = -L$(top_srcdir)/lib
MOC = @QT_MOC@

# The dependency for qt's Meta Object Compiler (moc)
moc_%.cpp:	%.h
	$(MOC) $< -o $@

# I18N Stuff
install-exec-local:	
	mkdir -p $(DESTDIR)$(prefix)/share/rivendell
	cp rdgpimon_*.qm $(DESTDIR)$(prefix)/share/rivendell

uninstall-local:	
	rm -f $(DESTDIR)$(prefix)/share/rivendell/rdgpimon_*.qm

all:	
	lupdate-qt4 rdgpimon.pro
	lrelease-qt4 rdgpimon.pro

bin_PROGRAMS = rdgpimon

dist_rdgpimon_SOURCES = gpi_label.cpp gpi_label.h\
                        rdgpimon.cpp rdgpimon.h

nodist_rdgpimon_SOURCES = moc_gpi_label.cpp\
                          moc_rdgpimon.cpp

rdgpimon_LDADD = @LIB_RDLIBS@ @LIBVORBIS@ @QT4_LIBS@ -lQt3Support

EXTRA_DIST = rdgpimon.pro\
             rdgpimon_cs.ts\
             rdgpimon_de.ts\
             rdgpimon_es.ts\
             rdgpimon_fr.ts\
             rdgpimon_nb.ts\
             rdgpimon_nn.ts\
             rdgpimon_pt_BR.ts

CLEANFILES = *~\
             *.idb\
             *ilk\
             *.obj\
             *.pdb\
             *.qm\
             moc_*

MAINTAINERCLEANFILES = *~\
                       Makefile.in\
                       moc_*

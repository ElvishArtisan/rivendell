    <refname>rdclilogedit</refname>
    <refpurpose>Command-line editor for Rivendell logs</refpurpose>
  </refnamediv>
  <info>
    <author>
      <personname>
	<firstname>Fred</firstname>
	<surname>Gleason</surname>

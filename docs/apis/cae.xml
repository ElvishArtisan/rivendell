      <varlistentry>
	<term>
	  <replaceable>left-lvl</replaceable>
	</term>
	<listitem>
	  <para>
	    Left channel level, in 100ths of dBFS.
	  </para>
	</listitem>
      </varlistentry>
      <varlistentry>
	<term>
	  <replaceable>right-lvl</replaceable>
	</term>
	<listitem>
	  <para>
	    Right channel level, in 100ths of dBFS.
	  </para>
	</listitem>
      </varlistentry>

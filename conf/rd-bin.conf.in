<Directory "@libexecdir@">
  Options ExecCGI FollowSymLinks
  AllowOverride None
  Order allow,deny
  Allow from all
  <Files *.gif>
    SetHandler default-handler
  </Files>
  <Files *.png>
    SetHandler default-handler
  </Files>
  <Files *.js>
    SetHandler default-handler
  </Files>
  <Files *.html>
    SetHandler default-handler
  </Files>
  <Files *.xml>
    SetHandler cgi-script
  </Files>
  <Files *.cgi>
    SetHandler cgi-script
  </Files>
  <Files *.mp3>
    SetHandler cgi-script
  </Files>
</Directory>
ScriptAlias /rd-bin/ "@libexecdir@/"
TimeOut 1200
